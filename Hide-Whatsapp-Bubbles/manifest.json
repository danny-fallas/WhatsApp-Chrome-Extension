{
    "manifest_version": 2,
    "name": "Hide Whatsapp Bubbles",
    "version": "1.10.5",
    "description": "Don't be THAT guy.",
    "icons": {
        "32": "media/off.png",
        "128": "media/on.png"
    },
    "browser_action": {
        "default_icon": "media/off.png",
        "default_title": "Turn ON"
    },
    "content_scripts": [
        {
            "js": [
                "js/jquery-3.2.1.slim.min.js",
                "js/contentscript.js"
            ],
            "matches": [
                "*://*.whatsapp.com/*"
            ]
        }
    ],
    "background": {
        "scripts": [
            "js/background.js"
        ]
    },
    "web_accessible_resources": [
        "js/background.js",
        "media/troll.png"
    ],
    "permissions": [
        "tabs",
        "*://*.whatsapp.com/*"
    ]
}